<h1>Shootouts</h1>

<% @shootouts.each do |shootout|  %>


<div class="container">
		<div class="col m12">
			<div class="row">
	            <h4>Microphone Shootout</h4>
	        </div>
	        <div class="row">
	        	<div id="nowPlay">
                    <span class="left" id="current-mic">
                    <%= shootout.shootout_microphones.first.microphone.manufacturer.name %>
                    <%= shootout.shootout_microphones.first.microphone.model %></span>
	            </div>
	        </div>
			<div class="row">
				<div id="audiowrap">
                    <div id="audio0">
                        <audio preload id="audio1" controls="controls">
                        	<source id="audio-to-play" src="">
                        	Your browser does not support HTML5 Audio!
                        </audio>
                    </div>
                </div>	
			</div>

			<div class="row">
	            <div id="shootout-list" class="collection">
					<% shootout.shootout_microphones.each do |sm| %>
					<% mic = sm.microphone %>
		                        
		            	<a href="#" id="mic-<%= mic.id %>" class="collection-item col m10">
		                    <div class="shootout-item" >
			                        <div class="shootout-item-title">
			                        	<span><%= mic.manufacturer.name %> <%= mic.model %></span>
			                        	<span class="shootout-item-length">1:00</span>
			                        </div>
		                    </div>
		                </a>
	                    <div class="col m2">
								<%= link_to 'More Info', microphone_path(mic), class: "btn" %>
	                    </div>
		            <% end  %>
	            </div>
            </div>
		</div>
    </div>
<% end  %>