
<div class="container shootout-container" style="background:url('<%= shootout.instrument.image.url %>'); background-size: cover;">
	<div class="col m12">
        <div class="row">
            <div class="current-instrument col">
                <%= shootout.instrument.name %>
            </div>        	
           	<div class="current-uploader col right">
                <%= shootout.user.username %>
            </div>
        </div>
		<div class="row">
            <div class="col m3">
                <div class="current-mic row">
                    <%= shootout.shootout_microphones.first.microphone.manufacturer.name %>
                    <%= shootout.shootout_microphones.first.microphone.model %>
                </div>
                <div class="row shootout-mic-image">
                    <%= image_tag shootout.shootout_microphones.first.microphone.image.url, class: "responsive-img" %>
                </div>
            </div>
			<div class="col m9 audiowrap">
                <div class="row">
                    <audio preload class="audio-track" controls="controls" id="shootout-audio-<%= shootout.id %>">
                    <source class="audio-source" src="<%= shootout.shootout_microphones.first.audio.url %>">
                    	Your browser does not support HTML5 Audio!
                    </audio>
                </div>
        		<div class="row">
                    <div class="collection shootout-list">
        				<% shootout.shootout_microphones.each do |sm| %>
        				<% mic = sm.microphone %>         
                            <a href="#" id="<%= sm.audio.url %>" class="collection-item col m10">
                                <div class="shootout-item" >
                                    <div class="shootout-item-title">
                                        <span><%= mic.manufacturer.name %> <%= mic.model %></span>
        <!--                                <span class="shootout-item-length">11000</span> -->
                                    </div>
                                </div>
                            </a>
                            <div class="col m2 mic-info-btn">
        						<%= link_to 'Info', microphone_path(mic), class: "btn" %>
                            </div>
        	            <% end  %>
                    </div>
                </div>
            </div>  
        </div>
	</div>
</div>
